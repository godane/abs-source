pkgname=ibus-table
pkgver=1.2.0.20100111
pkgrel=2
pkgdesc='The IM Engine framework for table-based input methods, such as ZhengMa, WuBi, ErBi, CangJie and so on.'
arch=('i686' 'x86_64')
url="http://code.google.com/p/ibus/"
license=('LGPL')
depends=('python-pyenchant' 'ibus=1.2.0' 'aspell-en')
provides=('ibus-table=1.2.0')
conflicts=('ibus-table-git')
source=(http://ibus.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)
md5sums=('e8ad50fe32f309eec7880cc4b27902e8')

build() {
	cd ${srcdir}/${pkgname}-${pkgver}
	./configure  --prefix=/usr --libexecdir=/usr/lib/ibus
	make || return 1
}

package() {
	cd ${srcdir}/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install
}
