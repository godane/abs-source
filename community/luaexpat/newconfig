LUA_LIBDIR= usr/lib/lua/5.1
LUA_DIR= usr/share/lua/5.1
LUA_INC= /usr/include
EXPAT_INC= /usr/include

# OS dependent
LIB_OPTION= -shared

LIBNAME= $T.so.$V
LUA_VERSION_NUM= 512
COMPAT_DIR= ../compat/src

# Compilation parameters
CWARNS = -Wall -pedantic \
        -Waggregate-return \
        -Wcast-align \
        -Wmissing-prototypes \
        -Wstrict-prototypes \
        -Wnested-externs \
        -Wpointer-arith \
        -Wshadow \
        -Wwrite-strings

CFLAGS = $(CWARNS) -ansi -O2 -I$(LUA_INC) \
   -I$(COMPAT_DIR) -I$(EXPAT_INC) -fPIC
CC = gcc
