# Maintainer: Stefan Husmann <stefan-husmann@t-online.de>
# Contributor: tocer.deng <tocer.deng@gmail.com>
pkgname=apvlv
pkgver=0.0.9.6
pkgrel=1
pkgdesc="A PDF Viewer which behaves like Vim"
arch=('i686' 'x86_64')
url="http://code.google.com/p/apvlv/"
license=('GPL')
depends=('poppler-glib' 'libdjvu')
source=(http://apvlv.googlecode.com/files/$pkgname-${pkgver}.tar.gz)
md5sums=('6128f0cb86d2d7b063c2feed04ab5f90')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr --with-sysconfdir=/etc \
    --with-mandir=/usr/share/man || return 1
  make || return 1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install || return 1
}
