pkgname=south
pkgver=0.7.1
pkgrel=1
pkgdesc="Intelligent database migrations library for the Django web framework"
arch=('any')
url="http://south.aeracode.org/"
license=('APACHE')
depends=('django')
makedepends=('setuptools')
source=(http://www.aeracode.org/releases/$pkgname/$pkgname-${pkgver}.tar.gz)
md5sums=('9368b8e7ff73a0a0a267d81092d4a789')

build() {
  cd "$srcdir/$pkgname"

  python setup.py install --root="$pkgdir" -O1 || return 1
}

