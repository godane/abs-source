pkgname=python-clientform
pkgver=0.2.10
pkgrel=2
pkgdesc="Python module for handling HTML forms on the client side."
arch=(any)
url="http://wwwsearch.sourceforge.net/ClientForm/"
license=(BSD ZPL)
depends=(python)
makedepends=(setuptools)
source=(http://wwwsearch.sourceforge.net/ClientForm/src/ClientForm-$pkgver.tar.gz)

build() {
    cd "$srcdir/ClientForm-$pkgver"
    python setup.py install --root="$pkgdir" --optimize=1 || return 1
    install -D -m644 "$srcdir/ClientForm-$pkgver/COPYING.txt" \
      "$pkgdir/usr/share/licenses/$pkgname/COPYING.txt"
}
md5sums=('832c0ca78674f9263d1fc5fab8756e66')
