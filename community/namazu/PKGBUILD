# Contributor: Benjamin Andresen <bandresen gmail com>

pkgname=namazu
pkgver=2.0.20
pkgrel=3
pkgdesc="Namazu is a full-text search engine intended for easy use."
url="http://namazu.org/"
license=('GPL')
arch=('i686' 'x86_64')
depends=(perl-file-mmagic)
source=(http://namazu.org/stable/$pkgname-$pkgver.tar.gz)
options=(!libtool)
md5sums=('ecac296bfe7d4df01a097a13e34023c6')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var/lib --mandir=/usr/share/man --libexecdir=/usr/lib/namazu --libdir=/usr/lib/namazu
  make || return 1
  make DESTDIR=$startdir/pkg install
}
