pkgname=beaver
pkgver=0.4.0rc1
pkgrel=1
pkgdesc="Beaver is an Early AdVanced EditoR"
arch=('i686' 'x86_64')
url="http://www.nongnu.org/beaver"
license=('GPL2')
depends=('gtk2>=2.0.0' 'hicolor-icon-theme')
install=$pkgname.install
source=(http://www.nongnu.org/beaver/dloads/tarballs/beaver-$pkgver.tar.gz)
md5sums=('f337d7fa872e9d6191e3c3bf5411f3e0')

build() {
  cd $srcdir/${pkgname}0.4.0
  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make prefix="$pkgdir/usr" install || return 1
  install -Dm644 beaver.1x $pkgdir/usr/share/man/man1/beaver.1x
}
