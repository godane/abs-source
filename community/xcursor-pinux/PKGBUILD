pkgname=xcursor-pinux
pkgver=0.3
pkgrel=8
pkgdesc="Pinux's Tux Cursors Theme"
arch=('any')
url="http://www.kde-look.org/content/show.php?content=19506"
license=('GPL')
source=(http://www.kde-look.org/CONTENT/content-files/19506-pinux\'s-tux-cursors-theme-0.3.tar.bz2 pArch.tar.bz2)
md5sums=('b7fc00b4f7487bed6c118286d497f70f' 'e3ef027f5c5ccee08fd638ad62bcb8e0')

build() {
	/bin/true
}

package() {
	mkdir -p ${pkgdir}/usr/share/icons
	cp -R ${srcdir}/cursors/* ${pkgdir}/usr/share/icons/
}
