# Contributor: Vasco Costa <vasco.costa@meiodigital.com>

pkgname=pokerth
_realname=PokerTH
pkgver=0.7.1
pkgrel=8
pkgdesc="Poker game written in C++/QT4"
arch=('i686' 'x86_64')
url="http://www.pokerth.net/"
license=('GPL' 'custom')
depends=('curl' 'boost>=1.41.0' 'gnutls' 'qt' 'sdl_mixer')
source=(http://downloads.sourceforge.net/sourceforge/pokerth/$_realname-$pkgver-src.tar.bz2)
md5sums=('a26a369bf3aa4b6ed92d0cadacb626e5')

build() {
  cd $srcdir/$_realname-$pkgver-src
  qmake $pkgname.pro
  make || return 1
  make INSTALL_ROOT=$pkgdir install
  install -D -m755 $pkgname $pkgdir/usr/bin/$pkgname
  install -D -m644 data/data-copyright.txt $pkgdir/usr/share/licenses/pokerth/data-copyright.txt
  install -D -m644 docs/pokerth.1 $pkgdir/usr/share/man/man1/pokerth.1
  rm -rf $pkgdir/usr/share/pokerth/data/data-copyright.txt

}
