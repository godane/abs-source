# $Id: PKGBUILD 75498 2010-04-01 17:59:20Z andrea $
# Maintainer:
# Contributor: Juergen Hoetzel <juergen@archlinux.org>
# Contributor: John Proctor <jproctor@prium.net>

pkgname=socat
pkgver=1.7.1.2
pkgrel=2
pkgdesc="Relay for bidirectional data transfer via socket, pty, pipe, file and more"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.dest-unreach.org/socat/"
depends=('readline' 'openssl' 'tcp_wrappers')
makedepends=('imake')
source=(http://www.dest-unreach.org/socat/download/$pkgname-$pkgver.tar.gz)
md5sums=('2a5b7b0355421a039fb68b7541181b38')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr \
    --mandir=/usr/share/man
  make depend || return 1
  make || return 1
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install || return 1
}
